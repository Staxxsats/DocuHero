# DocuHero Environment Variables

# AI Integration (OpenAI API for document processing and voice transcription)
OPENAI_API_KEY=sk-test-development-key-replace-with-real

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-here-change-in-production
ENCRYPTION_KEY=your-256-bit-secret-key-here-change-in-production-32chars

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/docuhero_dev

# File Storage (AWS S3 or similar)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=docuhero-files
AWS_REGION=us-east-1

# Email Service (SendGrid, AWS SES, etc.)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@docuhero.com

# Two-Factor Authentication
TOTP_ISSUER=DocuHero

# Audit Logging
AUDIT_LOG_RETENTION_DAYS=2555

# HIPAA Compliance
ENABLE_AUDIT_LOGGING=true
REQUIRE_2FA=true
ENCRYPTION_AT_REST=true
BACKUP_ENCRYPTION=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,txt

# Compliance
DEFAULT_COMPLIANCE_STATES=GA,TX,FL,CA,NY
COMPLIANCE_REPORT_RETENTION_YEARS=7

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info