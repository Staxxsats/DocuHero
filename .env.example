# Certifi.ai Environment Variables

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-here
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Database (Configure based on your choice)
DATABASE_URL=postgresql://username:password@localhost:5432/certifi_ai
# OR for MongoDB
# MONGODB_URI=mongodb://localhost:27017/certifi_ai

# File Storage (AWS S3 or similar)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=certifi-ai-files
AWS_REGION=us-east-1

# Email Service (SendGrid, AWS SES, etc.)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@certifi.ai

# Two-Factor Authentication
TOTP_ISSUER=Certifi.ai

# Audit Logging
AUDIT_LOG_RETENTION_DAYS=2555

# HIPAA Compliance
ENABLE_AUDIT_LOGGING=true
REQUIRE_2FA=true
ENCRYPTION_AT_REST=true
BACKUP_ENCRYPTION=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,txt

# Compliance
DEFAULT_COMPLIANCE_STATES=GA,TX,FL,CA,NY
COMPLIANCE_REPORT_RETENTION_YEARS=7

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info